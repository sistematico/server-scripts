[Unit]
Description=Icecast-KH daemon
Documentation=https://github.com/karlheyes/icecast-kh

[Service]
Type=simple
Restart=always
User=icecast
ExecStart=/usr/local/bin/icecast -b -c /etc/icecast/icecast.xml
PIDFile=/run/icecast.pid
KillMode=process
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target